@model S.G.H.ViewModel.PatientDocteurViewModel
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer;
@{
    ViewBag.Title = "Ajouter - Patient";
    Layout = "_Layout";
}
<h4>@localizer["Saisi les informations de ce nouveau patient"] :</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" >
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Nom" class="control-label">@localizer["Nom"] :</label>
                <input asp-for="Nom" class="form-control" required  oninvalid="this.setCustomValidity('Le Nom est obligatoire')" oninput="this.setCustomValidity('')" autocomplete="off" autofocus="true"/>
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Prenom" class="control-label">@localizer["Prenom"] :</label>
                <input asp-for="Prenom" class="form-control" required  oninvalid="this.setCustomValidity('Le Prenom est obligatoire')" oninput="this.setCustomValidity('')" autocomplete="off"/>
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Genre" class="control-label">@localizer["Genre"] :</label>
                <select asp-for="Genre" class="form-select" required  oninvalid="this.setCustomValidity('Le Genre est obligatoire')" oninput="this.setCustomValidity('')">
                    <option value="" disabled selected hidden >Choisir le genre</option>
                    <option value="Musculain" >Musculain</option>
                    <option value="Feminin">Feminin</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateNaissance" class="control-label">@localizer["Date de Naissance"] :</label>
                <input asp-for="DateNaissance" type="date" class="form-control" required  oninvalid="this.setCustomValidity('La DateNaissance est obligatoire')" oninput="this.setCustomValidity('')"/>
                <span asp-validation-for="DateNaissance" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label">@localizer["Email"] :</label>
                <input asp-for="Email" class="form-control" placeholder="email@adresse.com" required  oninvalid="this.setCustomValidity('Email est obligatoire')" oninput="this.setCustomValidity('')"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Telephone" class="control-label">@localizer["Telephone"] :</label>
                <input asp-for="Telephone" class="form-control" required  oninvalid="this.setCustomValidity('Le Telephone est obligatoire')" oninput="this.setCustomValidity('')"/>
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Adresse" class="control-label">@localizer["Adresse"] :</label>
                <input asp-for="Adresse" class="form-control" required  oninvalid="this.setCustomValidity('Adresse est obligatoire')" oninput="this.setCustomValidity('')"/>
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateEntrée" class="control-label">@localizer["Date d'entrée"] :</label>
                <input asp-for="DateEntrée" class="form-control" required type="date" oninvalid="this.setCustomValidity('Date d'entrée est obligatoire')" oninput="this.setCustomValidity('')"/>
                <span asp-validation-for="DateEntrée" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DocteurMatricule" class="control-label">@localizer["Son Docteur"]:</label>
                <select asp-for="DocteurMatricule" class="form-select" 
                    asp-items="@(new SelectList(Model.Docteurs, "Matricule" , "FullName"))" oninvalid="this.setCustomValidity('Le docteur est obligatoire')" oninput="this.setCustomValidity('')">
                    <option value="" disabled selected hidden >Sélectionner le Docteur</option>
                </select>
                <span asp-validation-for="DocteurMatricule" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="@localizer["Ajouter"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-info">@localizer["Annuler"]</a>
            </div>
        </form>
    </div>
</div>
