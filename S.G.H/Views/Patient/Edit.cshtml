@using Microsoft.AspNetCore.Mvc.Localization
@model S.G.H.ViewModel.PatientDocteurViewModel
@inject IViewLocalizer localizer
@{
    ViewBag.Title = "Edit - Patient";
    Layout = "_Layout";
}

<h4>@localizer["Modifier les informations de cette patient"] :</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display: grid;grid-template-columns: 1fr 1fr;grid-gap: 200px;">
                <div class="form-group">
                    <label asp-for="Matricule" class="control-label">@localizer["Matricule"] :</label>
                    <input asp-for="Matricule" class="form-control" readonly style="width:200%"/>
                    <span asp-validation-for="Matricule" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nom" class="control-label">@localizer["Nom"] :</label>
                    <input asp-for="Nom" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('Le Nom est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div style="display: grid;grid-template-columns: 1fr 1fr;grid-gap: 200px;">
                <div class="form-group">
                    <label asp-for="Prenom" class="control-label">@localizer["Prenom"] :</label>
                    <input asp-for="Prenom" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('Le Prenom est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label">@localizer["Genre"] :</label>
                    <select asp-for="Genre" class="form-select" required style="width:200%" oninvalid="this.setCustomValidity('Le Genre est obligatoire')" oninput="this.setCustomValidity('')">
                        <option value="Musculain" >Musculain</option>
                        <option value="Feminin">Feminin</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div style="display: grid;grid-template-columns: 1fr 1fr;grid-gap: 200px;">
                <div class="form-group">
                    <label asp-for="DateNaissance" class="control-label">@localizer["Date de Naissance"] :</label>
                    <input asp-for="DateNaissance" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('La Date Naissance est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="DateNaissance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">@localizer["Email"] :</label>
                    <input asp-for="Email" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('Email est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div style="display: grid;grid-template-columns: 1fr 1fr;grid-gap: 200px;">
                <div class="form-group">
                    <label asp-for="Telephone" class="control-label">@localizer["Telephone"] :</label>
                    <input asp-for="Telephone" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('Le Telephone est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Adresse" class="control-label">@localizer["Adresse"] :</label>
                    <input asp-for="Adresse" class="form-control" required style="width:200%" oninvalid="this.setCustomValidity('Adresse est obligatoire')" oninput="this.setCustomValidity('')"/>
                    <span asp-validation-for="Adresse" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div style="display: grid;grid-template-columns: 1fr 1fr;grid-gap: 200px;">
               <div class="form-group">
                    <label asp-for="DocteurMatricule" class="control-label">@localizer["Son Docteur"]:</label>
                    <select asp-for="DocteurMatricule" class="form-select" 
                        asp-items="@(new SelectList(Model.Docteurs ,"Matricule" , "FullName"))" style="width:200%" oninvalid="this.setCustomValidity('Le docteur est obligatoire')" oninput="this.setCustomValidity('')">
                        @if(Model.DocteurMatricule == 0)
                        {
                            <option value="" disabled selected hidden >Selectioner le docteur</option>
                        }
                    </select>
                    <span asp-validation-for="DocteurMatricule" class="text-danger"></span>
               </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="@localizer["Sauvegarder"]" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-primary">@localizer["Annuler"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
